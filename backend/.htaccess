# backend/.htaccess

# Ngăn truy cập trực tiếp vào file config
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Ngăn truy cập vào file log
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Ngăn truy cập vào file JSON
<Files "*.json">
    Order allow,deny
    Deny from all
</Files>

# Chỉ cho phép POST request đối với contact_handler.php
<Files "contact_handler.php">
    <LimitExcept POST>
        Order allow,deny
        Deny from all
    </LimitExcept>
</Files>

# Bảo mật chung
Options -Indexes
ServerSignature Off

# Ngăn execution của file PHP trong thư mục uploads (nếu có)
php_flag engine off