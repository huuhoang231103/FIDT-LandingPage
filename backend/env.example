# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
APP_DEBUG=true
APP_ENV=development

# Email Configuration
# Update these with your actual email addresses and domain
MAIL_FROM=cskh@yourdomain.com
MAIL_REPLY_TO=noreply@yourdomain.com
MAIL_TO=admin@yourdomain.com

# Example configurations:
# MAIL_FROM=admin@fidt.com
# MAIL_REPLY_TO=contact@fidt.com
# MAIL_TO=info@fidt.com

# Domain Configuration
# Update with your actual domain when deploying to production
SITE_DOMAIN=yourdomain.com
SITE_URL=https://yourdomain.com

# Example configurations:
# SITE_DOMAIN=fidt.com
# SITE_URL=https://fidt.com

# CORS Configuration
# Update with your frontend domain
CORS_ORIGIN=https://thinhvuongtaichinh.net

# Example for production:
# CORS_ORIGIN=https://yourdomain.com

# Database/File Configuration
DATA_DIR=data_consolidated
EMAILS_FILE=emails.json
SERVICES_FILE=DataService.json
TRAININGS_FILE=trainings.json
FAQ_FILE=faqData.json

# Security Configuration
SESSION_SECRET=your-secret-key-here
ADMIN_USERNAME=your-admin-username
ADMIN_PASSWORD=your-strong-password

# Example for production:
# SESSION_SECRET=your-very-long-random-secret-key
# ADMIN_USERNAME=your-username
# ADMIN_PASSWORD=your-password

# Timezone Configuration
TIMEZONE=Asia/Ho_Chi_Minh

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Example for production:
# LOG_LEVEL=error
# LOG_FILE=/var/log/fidt/app.log
